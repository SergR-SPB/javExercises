package levelUP3.Calculator;
/*
Создать класс Calculator. У него должны быть методы:
1. Сумма
2. Деление
3. Умножение
4. Вычитание
Все методы должны быть перегружены
и работать с тремя типами - double, long и int.
*/

public class Calculator {
    //Типы переменных меняются при перегрузке, выносить нет смысла??

    double colculate(String procedure,double a,double b) {
        System.out.println("procedure: " + procedure + "; numberOne: " + a + ";" +
                " numberTwo: " + b);
        double calc = 0;
        if (procedure.equals("sum")) {
            calc = a+b;
            System.out.println(calc);
        }
        if (procedure.equals("subtraction")) {
            calc = a-b;
            System.out.println(calc);
        }
        if (procedure.equals("multiplication")) {
            calc = a*b;
            System.out.println(calc);
        }
        if (procedure.equals("division")) {
            calc = calc = a/b;
            System.out.println(calc);
        }

        return calc;
    }
    int colculate(String procedure, int a, int b) {
        System.out.println("procedure: " + procedure + "; numberOne: " + a + ";" +
                " numberTwo: " + b);
        int calc = 0;
        if (procedure.equals("sum")) {
             calc = a + b;
            System.out.println(calc);
        }
        if (procedure.equals("subtraction")) {
             calc = a-b;
            System.out.println(calc);
        }
        if (procedure.equals("multiplication")) {
            calc = a*b;
            System.out.println(calc);
        }
        if (procedure.equals("division")) {
            calc = a/b;
            System.out.println(calc);
        }

        return calc;
    }
    long colculate(String procedure,long a,long b) {
        System.out.println("procedure: " + procedure + "; numberOne: " + a + ";" +
                " numberTwo: " + b);
        long calc = 0;
        if (procedure.equals("sum")) {
            calc = a+b;
            System.out.println(calc);
        }
        if (procedure.equals("subtraction")) {
            calc = a-b;
            System.out.println(calc);
        }
        if (procedure.equals("multiplication")) {
            calc = a*b;
            System.out.println(calc);
        }
        if (procedure.equals("division")) {
            calc = calc = a/b;
            System.out.println(calc);
        }

        return calc;
    }
}
